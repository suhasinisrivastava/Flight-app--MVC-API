@model flightclient.Models.Suhasinibooking

@{
    ViewData["Title"] = "Cancel";
    Layout="~/Views/Shared/Homelayout.cshtml";
}
<style>
    dl{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    dt{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    dd{
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>


<h3>Are you sure you want to delete this?</h3>
<div style="background-color: black;padding:25px; margin:25px; border-radius:10px;display:flex; flex-direction:column;align-items:center;justify-content:center;">
    
    <hr />
    <dl class="row" >
        <dt class = "col-sm-2">
            Booking id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bookingid)
        </dd>
        <dt class = "col-sm-2">
            Customer id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customerid)
        </dd>
        <dt class = "col-sm-2">
            Booking name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bookingname)
        </dd>
        <dt class = "col-sm-2">
            Flight id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flightid)
        </dd>
        <dt class = "col-sm-2">
            Booking date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bookingdate)
        </dd>
        <dt class = "col-sm-2">
            phone no
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bookingphone)
        </dd>
        <dt class = "col-sm-2">
            address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bookingaddress)
        </dd>
        <dt class = "col-sm-2">
            total cost
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bookingtotalcost)
        </dd>
        <dt class = "col-sm-2">
            total passengers
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bookingtotalmembers)
        </dd>
    </dl>
    
    <form asp-action="Cancel">
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        
    </form>
</div>
