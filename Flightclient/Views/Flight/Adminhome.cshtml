@model IEnumerable<flightclient.Models.Suhasiniflight>

@{
    ViewData["Title"] = "Adminhome";
    Layout="~/Views/Shared/adminlayout.cshtml";
}
<style>
    a{
        text-decoration: none;
        color: white;
    }
    th{
        border: 1px  solid white !important; 
        background-color: rgb(0, 0, 0) !important ; 
        color:rgb(255, 255, 255) !important ; 
         text-align:center !important ; vertical-align:middle !important ;
    }
    td{
        border: 1px  solid white !important ; background-color:white !important ; color:black!important ;  text-align:center !important ; vertical-align:middle!important ;
    }
</style>

<h1>Welcome Admin</h1>

<p>
    <a asp-action="AddFlight" style="text-decoration: dashed;">ADD NEW FLIGHT</a>
</p>
<table class="table" style=" border-spacing:0 15px; border-collapse:separate; ">
    <thead>
        <tr style="height:120px; ">
            <th style="border-radius:5px 0 0 5px;">
                @Html.DisplayNameFor(model => model.Flightid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flightname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flightsource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flightdestination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flightdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flightsourcetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flightdestinationtime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flightprice)
            </th>
            <th style="border-radius:0 5px 5px 0;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="height:120px; ">
            <td style="border-radius:5px 0 0 5px;">
                @Html.DisplayFor(modelItem => item.Flightid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flightname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flightsource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flightdestination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flightdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flightsourcetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flightdestinationtime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flightprice)
            </td>
            <td style="border-radius:0 5px 5px 0; color:black">
                <div style="padding:5px; background-color:rgb(229, 12, 12); color:white; text-decoration:none; border-radius:10px ; ">
                @Html.ActionLink("Edit", "Editflight", new { id=@item.Flightid })
                @Html.ActionLink("Cancel", "Cancelflight", new { id=@item.Flightid }, new {onclick="return confirm('are you sure you want to cancel this flight?');"})
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
